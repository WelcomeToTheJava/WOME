package movimiento;

import java.awt.image.BufferedImage;

import entidades.Animacion;

public class DiagonalSuperiorIzquierda implements Movimiento{

	private Animacion animacion;
	
	public DiagonalSuperiorIzquierda(int velMovimiento, BufferedImage [] mov) {
		this.animacion = new Animacion(velMovimiento, mov);
	}
	
	@Override
	public BufferedImage movimiento() {
		return animacion.getFrameActual();
	}

	@Override
	public Animacion getAnimacion() {
		return animacion;
	}

	@Override
	public void reset() {
		animacion.reset();
	}


	@Override
	public float  actualizarPosicionX() {
		return -1;
	}

	@Override
	public float  actualizarPosicionY() {
		return (float) -0.5;
	}

	@Override
	public int dameIndice() {
		// TODO Auto-generated method stub
		return animacion.getFrame();;
	}

}
